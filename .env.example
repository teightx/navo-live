# =============================================================================
# Navo.live Environment Variables
# =============================================================================
#
# Copy this file to .env.local for local development
# In Vercel, set these in Project Settings > Environment Variables
#

# =============================================================================
# Amadeus API (Production)
# =============================================================================

# Amadeus API base URL
# Production: https://api.amadeus.com
# Test/Sandbox: https://test.api.amadeus.com
AMADEUS_BASE_URL="https://test.api.amadeus.com"

# Amadeus API credentials (get from https://developers.amadeus.com)
AMADEUS_CLIENT_ID="your_client_id"
AMADEUS_CLIENT_SECRET="your_client_secret"

# =============================================================================
# Feature Flags
# =============================================================================

# Enable Amadeus API integration (set to "true" to enable)
USE_AMADEUS="true"

# Enable mock data (NEVER set to "true" in production)
USE_MOCKS="false"

# =============================================================================
# BETA Flags (Use with caution!)
# =============================================================================

# Use TEST Amadeus credentials in production
# When "true", production will use TEST_AMADEUS_* variables instead of AMADEUS_*
BETA_USE_TEST_CONFIG_IN_PROD="false"

# Allow mocks in production (DANGEROUS!)
BETA_ALLOW_MOCKS_IN_PROD="false"

# =============================================================================
# Test Amadeus Credentials (for BETA_USE_TEST_CONFIG_IN_PROD)
# =============================================================================

# TEST_AMADEUS_BASE_URL="https://test.api.amadeus.com"
# TEST_AMADEUS_CLIENT_ID="your_test_client_id"
# TEST_AMADEUS_CLIENT_SECRET="your_test_client_secret"
