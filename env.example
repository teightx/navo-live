# Navo Environment Configuration
# Copy this file to .env.local and fill in your credentials

# ============================================================================
# Feature Flags
# ============================================================================

# Enable Amadeus integration (set to 'true' to enable real API calls)
USE_AMADEUS="true"

# Enable mock data (WARNING: Cannot be 'true' in production!)
USE_MOCKS="false"

# Enable mock data on client-side (for dev UI fallback)
# Only used when USE_MOCKS is also true
NEXT_PUBLIC_USE_MOCKS="false"

# ============================================================================
# Amadeus API Configuration
# ============================================================================

# Amadeus API Base URL
# TEST environment: https://test.api.amadeus.com
# PROD environment: https://api.amadeus.com
AMADEUS_BASE_URL="https://test.api.amadeus.com"

# Amadeus API Credentials (obtain from Amadeus for Developers portal)
AMADEUS_CLIENT_ID="your_client_id_here"
AMADEUS_CLIENT_SECRET="your_client_secret_here"

# ============================================================================
# Rate Limiting
# ============================================================================

# Salt for hashing IP addresses in rate limiting (optional, adds extra security)
# Generate with: openssl rand -hex 32
RATE_LIMIT_SALT="your_random_salt_here"

# ============================================================================
# Environment
# ============================================================================

# Node environment (development | production | test)
NODE_ENV="development"

# ============================================================================
# Logo Debug Mode (Development Only)
# ============================================================================

# Enable logo debug badges to identify missing PNG assets
# Set to 'true' to see OK/MISSING indicators on airline and partner logos
NEXT_PUBLIC_LOGO_DEBUG="false"

# ============================================================================
# Feature Flags (Client-side)
# ============================================================================

# Enable smart holiday-based route suggestions (default: true)
# When true, shows holiday-based suggestions; when false, uses simple curated routes
NEXT_PUBLIC_SMART_ROUTES="true"

# ============================================================================
# Analytics (Optional)
# ============================================================================

# Google Analytics Measurement ID
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
